<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_sendMail_recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cecs453.1@gmail.com"
        android:inputType="textEmailAddress"
        android:hint="Recipient"/>

    <EditText
        android:id="@+id/editText_sendMail_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"/>

    <EditText
        android:id="@+id/editText_sendMail_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="10"
        android:gravity="top|left"
        android:hint="Your message"/>

    <Button
        android:id="@+id/button_sendMail_sendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Send Email"
        android:onClick="button_sendMail_onClick"/>
</LinearLayout>